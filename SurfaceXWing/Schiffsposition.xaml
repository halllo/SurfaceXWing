<UserControl x:Class="SurfaceXWing.Schiffsposition"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:s="http://schemas.microsoft.com/surface/2008"
			 xmlns:local="clr-namespace:SurfaceXWing"
			 Background="{Binding Color}"
			 Height="90" Width="90">
	<Grid>
		<Canvas Visibility="{Binding FluglinienVisible,Converter={StaticResource trueVisibleFalseCollapsed}}">
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 90,90 0 0 0 -45,-90"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 90,90 0 0 1 135,-90"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 150,150 0 0 0 -1,-126"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 150,150 0 0 1 91,-126"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 155,155 0 0 0 -110,-155"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 155,155 0 0 1 200,-155"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 270,270 0 0 0 -42,-215"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 270,270 0 0 1 132,-215"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 220,220 0 0 0 -175,-220"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 220,220 0 0 1 265,-220"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 390,390 0 0 0 -72,-290"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 390,390 0 0 1 162,-290"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 L 45,-540"/>
		</Canvas>
		<Canvas Visibility="{Binding RangeIndicatorVisible,Converter={StaticResource trueVisibleFalseCollapsed}}">
			<Ellipse Width="540" Height="540" Canvas.Left="-225" Canvas.Top="-225" Stroke="{Binding Color}" Opacity="1.0"/>
			<Border Width="270" Height="270" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="1.0" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="990" Height="990" Canvas.Left="-450" Canvas.Top="-450" Stroke="{Binding Color}" Opacity="0.7"/>
			<Border Width="495" Height="495" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.7" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="1440" Height="1440" Canvas.Left="-675" Canvas.Top="-675" Stroke="{Binding Color}" Opacity="0.5"/>
			<Border Width="720" Height="720" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.5" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
		</Canvas>

		<Rectangle Fill="Black" Margin="2" Opacity="{Binding BackgroundOpacity}"/>

		<s:SurfaceCheckBox VerticalAlignment="Top" HorizontalAlignment="Center" Content="range" IsChecked="{Binding RangeIndicatorVisible}"/>

		<TextBlock Text="{Binding Label}" FontSize="25" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />

		<s:ElementMenu x:Name="menu"
				  Visibility="Collapsed"
                  ActivationMode="AlwaysActive"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
				  Orientation="180">
			<s:ElementMenuItem Header="position">
				<s:ElementMenuItem Header="go back" Command="{Binding GoBack}"/>
				<s:ElementMenuItem Header="forget" Command="{Binding Forget}"/>
			</s:ElementMenuItem>
			<s:ElementMenuItem Header="cancel" Command="{Binding Cancel}" Visibility="{Binding Cancelable,Converter={StaticResource trueVisibleFalseCollapsed}}"/>
		</s:ElementMenu>

	</Grid>
</UserControl>

<UserControl x:Class="SurfaceXWing.Schiffsposition"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:s="http://schemas.microsoft.com/surface/2008"
			 xmlns:local="clr-namespace:SurfaceXWing"
			 Background="{Binding Color}"
			 Height="90" Width="90">
	<Grid>
		<Canvas Visibility="{Binding FluglinienVisible,Converter={StaticResource trueVisibleFalseCollapsed}}">
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 105,105 0 0 0 -60,-105"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 105,105 0 0 1 150,-105"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 250,250 0 0 0 -30,-180"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,0 A 250,250 0 0 1 120,-180"/>
			<Path Stroke="White" Opacity="0.2" StrokeThickness="25" Data="M 45,100 L 45,-360"/>

			<!--<Rectangle Width="90" Height="90" Fill="Blue" Canvas.Left="-105" Canvas.Top="-255">
				<Rectangle.RenderTransform>
					<RotateTransform CenterX="45" CenterY="45" Angle="45"/>
				</Rectangle.RenderTransform>
			</Rectangle>-->
		</Canvas>
		<Canvas Visibility="{Binding RangeIndicatorVisible,Converter={StaticResource trueVisibleFalseCollapsed}}">
			<Ellipse Width="400" Height="400" Canvas.Left="-155" Canvas.Top="-155" Stroke="{Binding Color}" Opacity="1.0"/>
			<Border Width="200" Height="200" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="1.0" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="600" Height="600" Canvas.Left="-255" Canvas.Top="-255" Stroke="{Binding Color}" Opacity="0.7"/>
			<Border Width="300" Height="300" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.7" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="800" Height="800" Canvas.Left="-355" Canvas.Top="-355" Stroke="{Binding Color}" Opacity="0.5"/>
			<Border Width="400" Height="400" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.5" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
		</Canvas>

		<Rectangle Fill="Black" Margin="2"/>

		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,-3,0,0">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-3,0,0" Visibility="{Binding TopArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-3"  Visibility="{Binding BottomArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-3,0,0,0"  Visibility="{Binding LeftArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-3,0"  Visibility="{Binding RightArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>

		<s:SurfaceCheckBox VerticalAlignment="Top" HorizontalAlignment="Center" Content="range" IsChecked="{Binding RangeIndicatorVisible}"/>

		<TextBlock Text="{Binding Label}" FontSize="25" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />

		<s:ElementMenu x:Name="menu"
				  Visibility="Collapsed"
                  ActivationMode="AlwaysActive"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
				  Orientation="180">
			<s:ElementMenuItem Header="position">
				<s:ElementMenuItem Header="go back" Command="{Binding GoBack}"/>
				<s:ElementMenuItem Header="forget" Command="{Binding Forget}"/>
			</s:ElementMenuItem>
			<s:ElementMenuItem Header="cancel" Command="{Binding Cancel}" Visibility="{Binding Cancelable,Converter={StaticResource trueVisibleFalseCollapsed}}"/>
		</s:ElementMenu>

	</Grid>
</UserControl>

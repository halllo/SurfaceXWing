<UserControl x:Class="SurfaceXWing.Schiffsposition"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:s="http://schemas.microsoft.com/surface/2008"
			 xmlns:local="clr-namespace:SurfaceXWing"
			 Background="{Binding Color}"
			 Height="90" Width="90">
	<Grid>
		<Canvas Visibility="{Binding RangeIndicatorVisible,Converter={StaticResource trueVisibleFalseCollapsed}}">
			<Ellipse Width="400" Height="400" Canvas.Left="-155" Canvas.Top="-155" Stroke="{Binding Color}" Opacity="1.0"/>
			<Border Width="200" Height="200" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="1.0" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="600" Height="600" Canvas.Left="-255" Canvas.Top="-255" Stroke="{Binding Color}" Opacity="0.6"/>
			<Border Width="300" Height="300" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.6" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
			<Ellipse Width="800" Height="800" Canvas.Left="-355" Canvas.Top="-355" Stroke="{Binding Color}" Opacity="0.4"/>
			<Border Width="400" Height="400" Canvas.Left="45" Canvas.Top="45" BorderBrush="{Binding Color}" Opacity="0.4" BorderThickness="1,1,0,0">
				<Border.RenderTransform>
					<RotateTransform CenterX="0" CenterY="0" Angle="-135"/>
				</Border.RenderTransform>
			</Border>
		</Canvas>

		<Rectangle Fill="Black" Margin="2"/>

		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,-3,0,0">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-3,0,0" Visibility="{Binding TopArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-3"  Visibility="{Binding BottomArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-3,0,0,0"  Visibility="{Binding LeftArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Width="10" Height="10" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-3,0"  Visibility="{Binding RightArrowVisibility}">
			<Rectangle.RenderTransform>
				<RotateTransform CenterX="5" CenterY="5" Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>

		<TextBlock Text="{Binding Text}" Foreground="White" FontSize="25"
					   VerticalAlignment="Center" HorizontalAlignment="Center"/>
		<TextBlock Text="{Binding StateText}" Foreground="White"
					   VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-30"/>

		<s:SurfaceCheckBox Content="range" VerticalAlignment="Top" HorizontalAlignment="Center" IsChecked="{Binding RangeIndicatorVisible}"/>

	</Grid>
</UserControl>

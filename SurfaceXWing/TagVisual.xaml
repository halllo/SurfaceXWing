<s:TagVisualization x:Class="SurfaceXWing.TagVisual"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:s="http://schemas.microsoft.com/surface/2008"
	xmlns:local="clr-namespace:SurfaceXWing"
	>

	<Grid Width="80" Height="80" Background="Blue" x:Name="container">

		<TextBlock Text="{Binding Id,Mode=OneWay,StringFormat=Tag {0}}" FontSize="15" Foreground="White"/>

	</Grid>
	
</s:TagVisualization>

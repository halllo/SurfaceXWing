<local:ScatterViewItemFieldObject x:Class="SurfaceXWing.EnvironmentBuilder"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:local="clr-namespace:SurfaceXWing"
             
			 MinWidth="110" MinHeight="70" Orientation="0.0" Background="Transparent"
			 CanScale="True"
			 >
	<Grid>
		<Rectangle Stroke="Yellow" StrokeThickness="2"/>

		<s:ElementMenu
				ActivationMode="AlwaysActive"
				HorizontalAlignment="Left" 
				VerticalAlignment="Top"
				Orientation="-45"
				>
			<s:ElementMenuItem Header="asteroid" Command="{Binding Asteroid}"/>
			<s:ElementMenuItem Header="debris" Command="{Binding Debris}"/>
			<s:ElementMenuItem Header="remove" Command="{Binding Remove}"/>
		</s:ElementMenu>
		
	</Grid>
</local:ScatterViewItemFieldObject>

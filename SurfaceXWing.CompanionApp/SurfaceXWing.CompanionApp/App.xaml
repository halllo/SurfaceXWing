<Application
    x:Class="SurfaceXWing.CompanionApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="using:Syncfusion.UI.Xaml.Controls.Input"
    xmlns:local="using:SurfaceXWing.CompanionApp"
    RequestedTheme="Light">

    <Application.Resources>

        <DataTemplate x:Key="ImageDisplay">
            <Grid Margin="0,10,0,10">
                <Image Source="{Binding Value}" HorizontalAlignment="Left" MaxWidth="300"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ImagesDisplay">
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Label}" Foreground="Gray"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding Value}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Bild}" Margin="0" MaxWidth="220"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ManoeuversDisplay">
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Label}" Foreground="Gray"/>
                <Rectangle Grid.Row="1" Fill="Magenta" Height="30"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NumericUpDownDisplay">
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Label}" Foreground="Gray"/>
                <Syncfusion:SfNumericUpDown Grid.Row="1" Value="{Binding Value,Mode=TwoWay}" FormatString="0"/>
            </Grid>
        </DataTemplate>

    </Application.Resources>

</Application>

<Application
    x:Class="SurfaceXWing.CompanionApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="using:Syncfusion.UI.Xaml.Controls.Input"
    xmlns:local="using:SurfaceXWing.CompanionApp"
    RequestedTheme="Light">

	<Application.Resources>

		<DataTemplate x:Key="ImageDisplay">
			<Grid Margin="0,10,0,10">
				<Image Source="{Binding Value}" HorizontalAlignment="Left" Width="300" Height="420" Stretch="None"/>
			</Grid>
		</DataTemplate>

		<DataTemplate x:Key="ImagesDisplay">
			<Grid Margin="0,10,0,10">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Text="{Binding Label}" Foreground="Gray"/>
				<ListBox Grid.Row="1" ItemsSource="{Binding Value}">
					<ListBox.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Vertical"/>
						</ItemsPanelTemplate>
					</ListBox.ItemsPanel>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto"/>
									<RowDefinition/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>
								<Image Source="{Binding Bild}" Width="220" Height="300" Stretch="None" Grid.RowSpan="2"/>
								<TextBlock Text="{Binding Name}" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0"/>
								<TextBlock Text="{Binding Beschreibung}" VerticalAlignment="Top" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1"/>
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</DataTemplate>

		<DataTemplate x:Key="ManoeuversDisplay">
			<Grid Margin="0,10,0,10">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Text="{Binding Label}" Foreground="Gray"/>
				<ItemsControl Grid.Row="1" ItemsSource="{Binding Value.GridVM}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<ItemsControl ItemsSource="{Binding}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<StackPanel Orientation="Horizontal"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<Button Command="{Binding Choose}" Background="Transparent">
											<Image Source="{Binding Url}" Width="30" Height="40" Stretch="None"/>
										</Button>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
				<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
					<TextBlock Text="ausgewählt" Foreground="Magenta" VerticalAlignment="Center" />
					<Image Source="{Binding Value.SelectedMove}" Width="30" Height="40" Stretch="None"/>
				</StackPanel>
			</Grid>
		</DataTemplate>

		<DataTemplate x:Key="NumericUpDownDisplay">
			<Grid Margin="0,10,0,10">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Text="{Binding Label}" Foreground="Gray"/>
				<Syncfusion:SfNumericUpDown Grid.Row="1" Width="170" HorizontalAlignment="Left"
											Value="{Binding Value,Mode=TwoWay}" FormatString="0" />
			</Grid>
		</DataTemplate>

	</Application.Resources>

</Application>
